<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/stroke_std"/>
            <gradient
                android:angle="90"
                android:endColor="@color/switch_track_on_end"
                android:startColor="@color/switch_track_on_start"/>
            <padding
                android:left="1dp"
                android:right="1dp"/>
        </shape>
    </item>
</layer-list>